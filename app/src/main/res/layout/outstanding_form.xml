<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:gravity="center_horizontal">

    <!-- Include App Bar -->
    <include
        layout="@layout/app_bar" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outstanding"
        android:textSize="35sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"/>

    <!-- Radio Buttons -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:id="@+id/receivableRadioButton"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Receivable" />

        <RadioButton
            android:id="@+id/payableRadioButton"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Payable" />
    </RadioGroup>

    <!-- Select Date -->
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:drawableEnd="@drawable/calendar"
        android:drawablePadding="8dp"
        android:focusable="false"
        android:hint="01/05/2025"
        android:inputType="none"
        android:paddingStart="5dp"
        android:paddingEnd="6dp" />

    <!-- Select Criteria -->
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Select Criteria"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/selectcriteria"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="Date Wise"
        android:inputType="none"
        android:background="@drawable/border"
        android:drawableEnd="@drawable/dropdown_arrow"
        android:drawablePadding="8dp"
        android:paddingStart="5dp"/>

    <!-- Select Operator -->
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Select Operator"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/selectoperator"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:drawableEnd="@drawable/dropdown_arrow"
        android:drawablePadding="8dp"
        android:focusable="false"
        android:hint="--Select an operator--"
        android:inputType="none"
        android:paddingStart="5dp"/>

    <!-- Due Days -->
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Due Days"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/duedays"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/border"
        android:clickable="true"
        android:drawableEnd="@drawable/arrow_up_down"
        android:focusable="false"
        android:hint="0"
        android:inputType="none"
        android:paddingStart="5dp"/>

    <!-- Generate Button -->
    <Button
        android:id="@+id/button"
        android:layout_width="85dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:background="#3588D3"
        android:text="Generate"
        android:textAlignment="center" />

</LinearLayout>
