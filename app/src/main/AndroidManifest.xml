<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.devisoft"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add Internet permission for network calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DeviSoft"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Splash Activity (launches first) -->
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity (Login) -->
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustResize"
            android:exported="true" />

        <!-- Year Selection Activity -->
        <activity
            android:name=".activities.YearSelectionActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true" />

        <!-- Company Details Activity -->
        <activity
            android:name=".activities.CompanyDetailsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".activities.DashboardActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".activities.OutstandingActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".activities.OutstandingReceivableActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true" />


        <activity
            android:name=".activities.AppBarActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true" />


    </application>

</manifest>
